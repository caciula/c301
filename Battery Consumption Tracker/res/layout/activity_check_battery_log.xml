<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C0C0C0" >
    
    <Button android:id="@+id/log_create_entry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/log_create_entry"
        android:textSize="20sp"
        android:onClick="createEntry" />
    
    <Button android:id="@+id/log_delete_entry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="@string/log_delete_entry"
        android:textSize="20sp"
        android:onClick="deleteEntry" />
    
    <ListView android:id="@+id/log_entries"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/log_create_entry" />
    
</RelativeLayout>